{
  "name": "client-apps",
  "root": true,
  "version": "1.0.0",
  "description": "Client applications in monorepo.",
  "main": "index.js",
  "scripts": {
    "start:mongo": "docker run --rm -d -p 27017:27017 --name mongo mongo",
    "prestart": "lerna bootstrap -- --no-optional",
    "start": "run-p start:apps start:gateways start:components",
    "start:components": "lerna exec --parallel --scope=*@krupnik/components* -- rollup --config=../../rollup.config.js -w",
    "start:apps": "lerna exec --parallel --scope=*@krupnik/app* -- webpack-dev-server --config=../../webpack.config.client.js",
    "start:gateways": "lerna exec --parallel --scope=*{@krupnik/gateway,@krupnik/webserver,@krupnik/service}* -- webpack --config=../../webpack.config.server.js -w",
    "start:in": "lerna run start",
    "prebuild": "lerna exec -- rimraf dist",
    "build": "run-p build:gateways build:apps build:components",
    "build:components": "lerna exec --parallel --scope=*@krupnik/components* -- rollup --config=../../rollup.config.js",
    "build:gateways": "lerna exec --parallel --scope=*{@krupnik/gateway,@krupnik/webserver,@krupnik/service}* -- webpack --config=../../webpack.config.server.js",
    "build:apps": "lerna exec --parallel --scope=*@krupnik/app* -- webpack --config=../../webpack.config.client.js --env.prod",
    "build:cli": "lerna run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yurikrupniktools/client-apps.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yurikrupniktools/client-apps/issues"
  },
  "homepage": "https://github.com/yurikrupniktools/client-apps#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^2.1.1",
    "dotenv": "^8.0.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "generate-json-webpack-plugin": "^0.3.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-runner-eslint": "^0.7.3",
    "lerna": "^3.14.1",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "nodemon-webpack-plugin": "^4.0.8",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "raw-loader": "^2.0.0",
    "rollup": "^1.13.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-generate-package-json": "^3.1.2",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-sass": "^1.2.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.3.0",
    "webpack": "^4.32.2",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.5.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
